{
	"geode": "5.0.1",
	"gd": {
		"win": "2.2081",
		"mac": "2.2081",
		"ios": "2.2081",
		"android": "2.2081"
	},
	"id": "kevadroz.practicecheckpointpermanence",
	"name": "Practice Checkpoint Permanence",
	"version": "v1.3.3",
	"developer": "Kevadroz",
	"description": "Make checkpoints that persist across sessions",
	"links": {
		"source": "https://github.com/Kevadroz/PracticeCheckpointPermanence"
	},
	"tags": [
		"gameplay",
		"enhancement",
		"utility"
	],
	"dependencies": {
		"geode.node-ids": ">=v1.22.0-beta.2",
		"sabe.persistenceapi": ">=v1.1.0"
	},
	"resources": {
		"spritesheets": {
			"MainSheet": [
				"resources/mainSheet/*.png"
			]
		}
	},
	"settings": {
		"practice-buttons-position": {
			"name": "Position of Practice Buttons",
			"type": "string",
			"one-of": [ "Horizontal", "Above", "Below" ],
			"default": "Horizontal"
		},
		"switch-in-out-normal-mode": {
			"name": "Integrated Normal Mode",
			"type": "bool",
			"default": false,
			"description": "Loads the Persistent Checkpoints in normal mode and lets you switch between normal mode and practice mode by switching checkpoints.\nNo checkpoint active is normal mode, any checkpoint active is practice mode"
		},
		"show-checkpoints-in-normal-mode": {
			"name": "Show checkpoints in Integrated Normal Mode",
			"type": "bool",
			"default": false,
			"enable-if": "switch-in-out-normal-mode"
		},
		"supress-auto-checkpoints": {
			"name": "Supress Auto Checkpoints",
			"type": "bool",
			"default": true,
			"description": "Disables auto checkpoints when a persistent checkpoint is active"
		},
		"reset-attempts": {
			"name": "Reset Attempts",
			"type": "bool",
			"default": false,
			"description": "Sets the attempts to one when switching checkpoints"
		},
		"delete-saves-with-level": {
			"name": "Delete Saved Checkpoints with the level",
			"type": "bool",
			"default": true,
			"description": "Deletes the checkpoints of a level when you manually delete that level from the saved levels"
		},
		"percentage-display-decimals": {
			"name": "Displayed decimals for percentages",
			"type": "int",
			"default": 2,
			"min": 0,
			"max": 8,
			"control": {
				"slider": true,
				"slider-step": 1,
				"arrows": true,
				"arrow-step": 1
			}
		},
		"active-checkpoint-opacity": {
			"name": "Active Checkpoint Opacity",
			"type": "float",
			"default": 1.0,
			"min": 0.0,
			"max": 1.0,
			"control": {
				"slider": true,
				"slider-step": 0.01,
				"arrows": true,
				"arrow-step": 0.1
			}
		},
		"inactive-checkpoint-opacity": {
			"name": "Inactive Checkpoint Opacity",
			"type": "float",
			"default": 0.4,
			"min": 0.0,
			"max": 1.0,
			"control": {
				"slider": true,
				"slider-step": 0.01,
				"arrows": true,
				"arrow-step": 0.1
			}
		},
		"progressbar-checkpoint-opacity": {
			"name": "Progress Bar Checkpoint Opacity",
			"type": "float",
			"default": 1.0,
			"min": 0.0,
			"max": 1.0,
			"control": {
				"slider": true,
				"slider-step": 0.01,
				"arrows": true,
				"arrow-step": 0.1
			}
		},
		"title-switcher": {
			"type": "title",
			"name": "Switcher"
		},
		"switcher-enabled": {
			"name": "Enabled",
			"type": "bool",
			"default": true
		},
		"switcher-label-active-opacity": {
			"name": "Label Opacity",
			"type": "float",
			"default": 1.0,
			"min": 0.0,
			"max": 1.0,
			"control": {
				"slider": true,
				"slider-step": 0.01,
				"arrows": true,
				"arrow-step": 0.1
			}
		},
		"switcher-label-inactive-opacity": {
			"name": "Label Inactive Opacity",
			"type": "float",
			"default": 0.0,
			"min": 0.0,
			"max": 1.0,
			"control": {
				"slider": true,
				"slider-step": 0.01,
				"arrows": true,
				"arrow-step": 0.1
			}
		},
		"switcher-button-active-opacity": {
			"name": "Button Opacity",
			"type": "float",
			"default": 1.0,
			"min": 0.0,
			"max": 1.0,
			"control": {
				"slider": true,
				"slider-step": 0.01,
				"arrows": true,
				"arrow-step": 0.1
			}
		},
		"switcher-button-inactive-opacity": {
			"name": "Button Inactive Opacity",
			"type": "float",
			"default": 0.5,
			"min": 0.0,
			"max": 1.0,
			"control": {
				"slider": true,
				"slider-step": 0.01,
				"arrows": true,
				"arrow-step": 0.1
			}
		},
		"switcher-icon-active-opacity": {
			"name": "Icon Opacity",
			"type": "float",
			"default": 1.0,
			"min": 0.0,
			"max": 1.0,
			"control": {
				"slider": true,
				"slider-step": 0.01,
				"arrows": true,
				"arrow-step": 0.1
			}
		},
		"switcher-icon-inactive-opacity": {
			"name": "Icon Inactive Opacity",
			"type": "float",
			"default": 0.5,
			"min": 0.0,
			"max": 1.0,
			"control": {
				"slider": true,
				"slider-step": 0.01,
				"arrows": true,
				"arrow-step": 0.1
			}
		},
		"keybinds": {
			"type": "title",
			"name": "Keybinds"
		},
		"keybind-create-checkpoint": {
			"type": "keybind",
			"name": "Create Checkpoint",
			"default": "Alt+Z",
			"description": "Creates a new persistent checkpoint",
			"category": "gameplay",
			"migrate-from": "kevadroz.practicecheckpointpermanence/create_checkpoint"
		},
		"keybind-remove-checkpoint": {
			"type": "keybind",
			"name": "Remove Checkpoint",
			"default": "Alt+X",
			"description": "Removes the active persistent checkpoint",
			"category": "gameplay",
			"migrate-from": "kevadroz.practicecheckpointpermanence/remove_checkpoint"
		},
		"keybind-previous-checkpoint": {
			"type": "keybind",
			"name": "Previous Checkpoint",
			"default": "Alt+Q",
			"description": "Activates the previous persistent checkpoint",
			"category": "gameplay",
			"migrate-from": "kevadroz.practicecheckpointpermanence/previous_checkpoint"
		},
		"keybind-next-checkpoint": {
			"type": "keybind",
			"name": "Next Checkpoint",
			"default": "Alt+E",
			"description": "Activates the next persistent checkpoint",
			"category": "gameplay",
			"migrate-from": "kevadroz.practicecheckpointpermanence/next_checkpoint"
		},
		"keybind-previous-layer": {
			"type": "keybind",
			"name": "Previous Layer",
			"default": "Alt+Shift+Q",
			"description": "Switches to the previous save layer",
			"category": "gameplay",
			"migrate-from": "kevadroz.practicecheckpointpermanence/previous_layer"
		},
		"keybind-next-layer": {
			"type": "keybind",
			"name": "Next Layer",
			"default": "Alt+Shift+E",
			"description": "Switches to the next save layer",
			"category": "gameplay",
			"migrate-from": "kevadroz.practicecheckpointpermanence/next_layer"
		}
	}
}
